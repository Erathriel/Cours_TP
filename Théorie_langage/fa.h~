#include <stdio.h>
#include <stdlib.h>
#include <stddef.h>
#include <unistd.h>
#include <assert.h>
#include <stdbool.h>

#ifdef FA_H
#define FA_H

struct state {
	bool *initial states;
	bool *final states;
};

struct state_set {
	size_t size;
	size_t capacity;
	size_t *states;
};

struct fa {
	size_t alpha_count;
	size_t state_count;

	struct state *states;
	struct state_set **transition;
};

void fa_create(struct fa *self, size_t alpha_count, size_t state_count);
void fa_destroy(struct fa *self);




#endif
